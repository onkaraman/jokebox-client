<resources>
	<style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorAccent">@color/text</item>
		<item name="colorPrimary">@color/text</item>
		<item name="colorPrimaryDark">@color/text</item>
		<item name="android:colorBackground">@color/background</item>
		<item name="android:windowBackground">@color/background</item>
		<item name="android:textColorPrimary">@color/text</item>
		<item name="android:windowAnimationStyle">@null</item>
	</style>

	<style name="MainButton" parent="Widget.AppCompat.Button">
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:layout_width">@dimen/textboxWidth</item>
		<item name="android:height">@dimen/buttonHeight</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:background">@drawable/MainButtonSelector</item>
	</style>

	<style name="MainEditText" parent="@android:style/Widget.EditText">
		<item name="android:layout_height">@dimen/buttonHeight</item>
		<item name="android:paddingLeft">@dimen/textboxPaddingLeft</item>
		<item name="android:textSize">16sp</item>
		<item name="android:singleLine">true</item>
		<item name="android:textColor">@color/background</item>
		<item name="android:background">@drawable/MainEditTextBackground</item>
	</style>
</resources>
